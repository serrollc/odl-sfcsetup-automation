            "service_node": "Node06-SF1"
            },

            {
            "name" : "SF2",
            "ip-address": "172.16.9.43",
            "type": "firewall",
            "sff_name": "Node06-SFF1",
            "service_node": "Node06-SF2"
            },

            {
            "name" : "SF3",
            "ip-address": "172.16.9.53",
