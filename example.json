                    {
                    "name": "ssh",
                    "proto": 6,
                    "sprange": [0, 0],
                    "dprange": [22, 22],
                    "siprange": "192.168.2.0/24",
                    "diprange": "192.168.2.0/24",
                    "action" : "Node06-SFC2",
                    "direction": "Forward"
                    }

                ]
            },
            {
            "name" : "Endpoint-ssh-server",
            "type" : "ipv4-acl",
            "aces" : [
                    {
                    "name": "ssh",
                    "proto": 6,
                    "sprange": [22, 22],
                    "dprange": [0, 0],
                    "siprange": "192.168.2.0/24",
                    "diprange": "192.168.2.0/24",
